<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tab_layout"
        android:paddingBottom="10dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginStart="-60dp"
        android:paddingTop="10dp"
        app:tabTextAppearance="@style/BigTitleTabTheme"
        app:tabIndicator="@null"
        app:tabMode="auto"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tab_layout"
        android:layout_width="match_parent"
        android:id="@+id/delivery_items_rv"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="@string/msg_delivery_is_free"
        android:layout_below="@+id/delivery_items_rv"
        android:textColor="@color/grey"
        android:id="@+id/delivery_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/delivery_price_tv"
        android:textStyle="bold"
        android:id="@+id/value_tv"
        android:text="@string/title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/delivery_price_tv"
        android:layout_toEndOf="@+id/value_tv"
        android:textStyle="bold"
        tools:text="200.00"
        android:textSize="25sp"
        android:id="@+id/sum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>